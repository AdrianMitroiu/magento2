<?xml version="1.0"?>
<!--
/**
 * Twispay_Payments default configuration
 *
 * @category    Twispay
 * @package     Twispay_Payments
 * @author      Webliant Software
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <twispay>
                <active>1</active>
                <title>Twispay</title>
                <payment_action>true</payment_action>
                <order_status>pending_payment</order_status>
                <order_type>purchase</order_type>
                <card_transaction_mode>authAndCapture</card_transaction_mode>
                <live_api_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <test_api_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <live_redirect_url>https://secure.twispay.com</live_redirect_url>
                <test_redirect_url>https://secure-stage.twispay.com</test_redirect_url>
                <model>Twispay\Payments\Model\Twispay</model>
                <group>offline</group>
            </twispay>
        </payment>
    </default>
</config>
