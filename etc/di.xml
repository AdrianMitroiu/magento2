<?xml version="1.0"?>
<!--
/**
 * Twispay Payments dependency injection configuration
 *
 * @category    Twispay
 * @package     Twispay_Payments
 * @author      Webliant Software
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Twispay\Payments\Api\TwispayPaymentDetailsInterface"
                type="Twispay\Payments\Service\V1\TwispayPaymentDetails"/>
    <preference for="Twispay\Payments\Api\GuestTwispayPaymentDetailsInterface"
                type="Twispay\Payments\Service\V1\GuestTwispayPaymentDetails"/>
    <preference for="Twispay\Payments\Api\Data\OrderPaymentResponseInterface"
                type="Twispay\Payments\Service\V1\Data\OrderPaymentResponse"/>

    <type name="Twispay\Payments\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>

    <type name="Twispay\Payments\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">twispayLogger</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Twispay\Payments\Logger\Handler</item>
            </argument>
        </arguments>
    </type>

    <virtualType name="TwispaySaleRequest" type="Magento\Payments\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="payment" xsi:type="string">Twispay\Payments\Gateway\Request\DataBuilder</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="TwispaySaleHandler" type="Magento\Payments\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="payment_details" xsi:type="string">Twispay\Payments\Gateway\Response\PaymentDetailsHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="TwispaySaleCommand" type="Magento\Payments\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Twispay\Payments\Gateway\Request\DataBuilder</argument>
            <argument name="handler" xsi:type="object">TwispaySaleHandler</argument>
            <argument name="validator" xsi:type="object">Twispay\Payments\Gateway\Validator\GeneralResponseValidator</argument>
        </arguments>
    </virtualType>

    <virtualType name="TwispayCaptureCommand" type="Magento\Payments\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Twispay\Payments\Model\SaleModel</argument>
        </arguments>
    </virtualType>

    <virtualType name="TwispayCommandPool" type="Magento\Payments\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="capture" xsi:type="string">TwispayCaptureCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Twispay\Payments\Model\Twispay">
        <arguments>
            <argument name="commandPool" xsi:type="object">TwispayCommandPool</argument>
        </arguments>
    </type>

</config>
