<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
	<preference for="Twispay\Payments\Api\TwispayPaymentDetailsInterface" type="Twispay\Payments\Service\V1\TwispayPaymentDetails" />
	<preference for="Twispay\Payments\Api\Data\OrderPaymentResponseInterface" type="Twispay\Payments\Service\V1\Data\OrderPaymentResponse" />

	<type name="Twispay\Payments\Logger\Handler">
		<arguments>
			<argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
		</arguments>
	</type>

	<type name="Twispay\Payments\Logger\Logger">
		<arguments>
			<argument name="name" xsi:type="string">twispayLogger</argument>
			<argument name="handlers"  xsi:type="array">
				<item name="system" xsi:type="object">Twispay\Payments\Logger\Handler</item>
			</argument>
		</arguments>
	</type>
</config>